{
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "module": "es2020", // Was es6
    "jsx": "react",
    "allowJs": true,
    "lib": ["es2020", "dom"],
    "strict": false,
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "target": "es5",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "spec"]
}